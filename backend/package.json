{
  "name": "xrpl-bonds-backend",
  "version": "1.0.0",
  "description": "Backend server for XRPL bonds management with MongoDB",
  "private": true,
  "scripts": {
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "create-mptoken": "ts-node ./mptoken/index.ts",
    "create-wallet": "ts-node ./mptoken/create_and_fund_wallet.ts",
    "create-bond": "ts-node src/scripts/create-bond.ts",
    "sync-holders": "ts-node src/scripts/sync-holders.ts",
    "execute-coupons": "ts-node src/scripts/execute-coupons.ts",
    "test-workflow": "ts-node src/scripts/test-complete-workflow.ts"
    ,
    "build-escrow-wasm": "cd escrow-wasm && wasm-pack build --target nodejs --out-dir ../pkg/escrow --release"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "xrpl": "^4.4.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
